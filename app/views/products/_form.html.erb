<%= form_with(model: product, local: true, class: "js-form") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :start_at %>
      <div class="input-group date" id="start_at" data-target-input="nearest">
          <input type="text" name="product[start_at]" class="form-control datetimepicker-input" data-target="#start_at"/>
          <div class="input-group-append" data-target="#start_at" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
      </div>
  </div>

  <div class="form-group">
      <%= form.label :end_at %>
      <div class="input-group date" id="end_at" data-target-input="nearest">
          <input type="text" name="product[end_at]" class="form-control datetimepicker-input" data-target="#end_at"/>
          <div class="input-group-append" data-target="#end_at" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
      </div>
  </div>

  <div class="field form-group">
    <%= form.label :currency %>
    <select name="product[currency]" class='js-currency-select form-control'>
      <%= options_for_select(Product.currencies.keys, form.object.currency) %>
    </select>
  </div>

  <div class="field form-group">
    <%= form.label :tag_list %>
    <select name="product[tag_list][]" class='js-tag-select form-control' multiple= 'true'>
      <%= options_for_select(form.object.tag_list, form.object.tag_list) %>
    </select>
  </div>

  <div class="actions">
    <%= form.submit 'submit', class: 'js-submit-btn btn btn-primary' %>
  </div>
<% end %>
